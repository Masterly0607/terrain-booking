pipeline {
    agent any

    stages {
        stage('Install PHP Dependencies') {
            steps {
                sh 'composer install'
            }
        }

        stage('Install NPM Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'php artisan test'
            }
        }
    }

    post {
        success {
            mail to: 'srengty@gmail.com',
                 subject: "Build Successful: ${env.JOB_NAME}",
                 body: "Build #${env.BUILD_NUMBER} of ${env.JOB_NAME} completed successfully."
        }
        failure {
            mail to: 'srengty@gmail.com',
                 subject: "Build Failed: ${env.JOB_NAME}",
                 body: "Build #${env.BUILD_NUMBER} of ${env.JOB_NAME} failed. Please check."
        }
    }
}
