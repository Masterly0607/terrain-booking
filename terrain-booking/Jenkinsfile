pipeline {
    agent any

    stages {
        stage('Install PHP Dependencies') {
            steps {
                sh 'composer install'
            }
        }

        stage('Install NPM Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'php artisan test'
            }
        }
    }

    post {
        success {
            echo "✅ Build #${env.BUILD_NUMBER} of ${env.JOB_NAME} completed successfully."
        }
        failure {
            echo "❌ Build #${env.BUILD_NUMBER} of ${env.JOB_NAME} failed. Please check the logs."
        }
    }
}
